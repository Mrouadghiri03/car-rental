{# templates/customer/new.html.twig #}
{% extends 'base.html.twig' %}

{% block title %}Create New Customer{% endblock %}

{% block body %}
    <div class="container">
        <h1>Create New Customer</h1>

        {# Affichage du formulaire #}
        {{ form_start(form) }}
            <div class="form-group">
                {{ form_row(form.name) }}
            </div>
            <div class="form-group">
                {{ form_row(form.email) }}
            </div>
            <div class="form-group">
                {{ form_row(form.phone) }}
            </div>
            <div class="form-group">
                {{ form_row(form.licencenumber) }}
            </div>
            <div class="form-group">
                {{ form_row(form.address) }}
            </div>
            <div class="form-group">
                {{ form_row(form.save) }}
            </div>
        {{ form_end(form) }}
    </div>
{% endblock %}
