<!DOCTYPE html>
<html>
<head>
    <title>Liste des clients</title>
</head>
<body>
    <h1>Liste des clients</h1>
    <table border="1">
        <thead>
            <tr>
                <th>ID</th>
                <th>Nom</th>
                <th colspan="3">actions</th>
            </tr>
        </thead>
        <tbody>
            {% for car in cars %}
                <tr>
                    <td>{{ car.id }}</td>
                    <td>{{ car.brand }}</td>
                    <td>{{ car.model }}</td>

                  
                    <td><a href="{{ path('app_car_details', {'id': car.id}) }}">details</a></td>
                    <td><a href="{{ path('app_car_delete', {'id': car.id}) }}">delete</a></td>
                

                    

                
                </tr>
            {% else %}
                <tr>
                    <td colspan="3">Aucun client trouv√©.</td>
                </tr>
            {% endfor %}
        </tbody>
    </table>
</body>
</html>
