<!DOCTYPE html>
<html>
<head>
    <title>Liste des categories</title>
    <link rel="stylesheet" href="{{ asset('css/rentalslist.css') }}">
</head>
<body>
    <div class="container">
        <div class="header_rentals">
            <div class="add_rentals_div">
                <a class="btn_add" href="{{path('app_rental_add')}}">ADD Renatl</a>
            </div>
            <div class="titre">
                <h1>Rentals List</h1>
            </div>
        </div>
        
        <div class="table_rental">
    <table border="1">
        <thead>
            <tr>
                <th>id </th>
               
                <th>car model </th>

                <th>car brand </th>
               
             
                <th>customer name </th>
                <th colspan="3">actions</th>
                
            </tr>
        </thead>
        <tbody>
            {% for rental in rentals %}
                <tr>
                    
                        <td>{{ rental.id }}</td>
                       
                        
                        <td>{{ rental.car.model }}</td>
                        <td>{{ rental.car.brand }}</td> <!-- Remplacez par une propriété valide si 'nom' n'existe pas -->
                        <td>{{ rental.customer.name }}</td>
                        <td><a href="{{ path('app_rentals_details', {'id': rental.id}) }}">details</a></td>
                        <td><a href="{{ path('app_rentals_edit', {'id': rental.id}) }}">edit</a></td>
                        <td><a href="{{ path('app_rentals_delete', {'id': rental.id}) }}">delete</a></td>

                </tr>
            {% else %}
                <tr>
                    <td colspan="3">Aucun client trouvé.</td>
                </tr>
            {% endfor %}
        </tbody>
    </table>
    </div>
    </div>
</body>
</html>
