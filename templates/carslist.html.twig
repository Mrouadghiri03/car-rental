<!DOCTYPE html>
<html>
<head>
    <title>cars</title>
    <link rel="stylesheet" href="{{ asset('css/carslist.css') }}">
</head>
</head>
<body>
    <div class="container">
        <div class="header_car">
            <div class="add_car_div">
                <a class="btn_add" href="{{path('app_car_add')}}">ADD Car</a>
            </div>
            <div class="titre">
                <h1>Cars List</h1>
            </div>
        </div>
    <div class="table_cars">
    <table border="1">
        <thead>
            <tr>
                <th>ID</th>
                <th>Brand</th>
                <th>Model</th>
                <th colspan="3">actions</th>
            </tr>
        </thead>
        <tbody>
            {% for car in cars %}
                <tr>
                    <td>{{ car.id }}</td>
                    <td>{{ car.brand }}</td>
                    <td>{{ car.model }}</td>

                  
                    <td><a href="{{ path('app_car_details', {'id': car.id}) }}">details</a></td>
                    <td><a href="{{ path('app_car_edit', {'id': car.id}) }}">edit</a></td>
                    <td><a href="{{ path('app_car_delete', {'id': car.id}) }}">delete</a></td>
                
                </tr>
            {% else %}
                <tr>
                    <td colspan="3">Aucun car trouv√©.</td>
                </tr>
            {% endfor %}
        </tbody>
    </table>
    </div>
    </div>
</body>
</html>
